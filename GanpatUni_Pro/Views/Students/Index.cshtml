@model IEnumerable<GanpatUni_Pro.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enroll_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Enroll_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departments.Dept_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.User_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Student_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Student_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Student_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
